<div class="login-container">
  <div class="login-header">
    <h1>Cranston Auth</h1>
    <p>Admin Login</p>
  </div>
  
  <% if flash[:alert] %>
    <div class="alert"><%= flash[:alert] %></div>
  <% end %>
  
  <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>
  
  <%= form_with url: admin_login_path, local: true do |form| %>
    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email, required: true, autofocus: true, placeholder: "admin@cranston.edu" %>
    </div>
    
    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, required: true, placeholder: "Enter your password" %>
    </div>
    
    <%= form.submit "Login", class: "btn-login" %>
  <% end %>
</div>